{
  "name": "@flowtrace/api",
  "version": "1.0.0",
  "description": "FlowTrace REST and WebSocket API layer using NestJS with Fastify",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
