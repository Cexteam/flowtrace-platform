{
  "name": "@flowtrace/persistence",
  "version": "1.0.0",
  "description": "FlowTrace persistence service - candle storage with bootstrap pattern",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:schemas && tsc --build",
    "build:clean": "rm -rf dist && npm run build:schemas && tsc --build",
    "build:schemas": "./scripts/build-schemas.sh",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@flowtrace/core": "workspace:*",
    "@flowtrace/ipc": "workspace:*",
    "@google-cloud/storage": "^7.18.0",
    "better-sqlite3": "^11.6.0",
    "flatbuffers": "^24.3.25",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "fast-check": "^4.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "flowtrace",
    "persistence",
    "candle-storage",
    "binary-storage"
  ],
  "license": "ISC"
}
