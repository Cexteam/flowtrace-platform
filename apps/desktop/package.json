{
  "name": "@flowtrace/desktop",
  "version": "1.0.0",
  "description": "FlowTrace desktop application - Electron-based standalone app",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.preload.json",
    "build:clean": "rm -rf dist && tsc && tsc -p tsconfig.preload.json",
    "build:core": "pnpm --filter @flowtrace/core build",
    "build:api": "pnpm --filter @flowtrace/api build",
    "build:ipc": "pnpm --filter @flowtrace/ipc build",
    "build:persistence": "pnpm --filter @flowtrace/persistence build",
    "build:packages": "pnpm build:core && pnpm build:api && pnpm build:ipc && pnpm build:persistence",
    "build:all": "pnpm build:packages && pnpm build",
    "build:fresh": "pnpm build:packages && pnpm build:clean",
    "build:ui": "pnpm --filter @flowtrace/ui build:electron",
    "start": "electron dist/main.js",
    "start:dev": "NODE_ENV=development electron dist/main.js",
    "dev": "pnpm build:fresh && NODE_ENV=development electron dist/main.js",
    "dev:full": "pnpm build:fresh && concurrently -n ui,electron -c blue,green \"pnpm --filter @flowtrace/ui dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron dist/main.js\"",
    "dev:watch": "concurrently \"pnpm build:watch\" \"wait-on dist/main.js && NODE_ENV=development electron .\"",
    "build:watch": "tsc --watch",
    "test": "jest --config jest.config.cjs --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist release",
    "pack": "pnpm build:all && pnpm build:ui && electron-builder --dir",
    "dist": "pnpm build:all && pnpm build:ui && electron-builder",
    "dist:win": "pnpm build:all && pnpm build:ui && electron-builder --win",
    "dist:mac": "pnpm build:all && pnpm build:ui && electron-builder --mac",
    "dist:linux": "pnpm build:all && pnpm build:ui && electron-builder --linux",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@flowtrace/api": "workspace:*",
    "@flowtrace/core": "workspace:*",
    "@flowtrace/persistence": "workspace:*",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "better-sqlite3": "^11.6.0",
    "dotenv": "^16.4.7",
    "electron-store": "^10.0.0",
    "inversify": "^6.0.2",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "fast-check": "^4.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "flowtrace",
    "desktop",
    "electron",
    "trading",
    "market-data"
  ],
  "license": "ISC"
}
