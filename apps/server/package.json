{
  "name": "@flowtrace/server",
  "version": "1.0.0",
  "description": "FlowTrace server application - VPS/cloud deployment target",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t flowtrace-server .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "@flowtrace/api": "workspace:*",
    "@flowtrace/core": "workspace:*",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/swagger": "^8.1.0",
    "dotenv": "^16.4.7",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "flowtrace",
    "server",
    "trading",
    "market-data"
  ],
  "license": "ISC"
}
