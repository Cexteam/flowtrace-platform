# FlowTrace Server Environment Configuration
# Copy this file to .env and update values as needed

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=*

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=flowtrace
POSTGRES_PASSWORD=flowtrace_secret
POSTGRES_DB=flowtrace
POSTGRES_POOL_MAX=20

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_PATH=./data/ticks
STORAGE_INDEX_INTERVAL=60000

# ============================================================================
# Worker Configuration
# ============================================================================
WORKER_THREADS_COUNT=4
